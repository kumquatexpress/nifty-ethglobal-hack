{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
  },
  "exclude": ["node_modules", "worker", "client"],
}